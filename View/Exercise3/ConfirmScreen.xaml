<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chapter8.View.Exercise3.ConfirmScreen"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#130329"
             Title="ConfirmScreen">

    <ScrollView>
        <StackLayout
            Padding="20">
            <Image
                Margin="0,120,0,30"
                HeightRequest="100"
                WidthRequest="100"
                Source="correct"/>
            <Label
                HorizontalOptions="Center"
                Style="{StaticResource Heading}"
                Text="New password"/>
            <Label
                HorizontalOptions="Center"
                Style="{StaticResource Heading}"
                Text="confirmed successful"/>
            <Label
                Margin="0,10"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Style="{StaticResource SmallLable}"
                Text="You have successfully confirm your new password. Please, use your new password when logging in"/>
            <Button  
                Clicked="ButtonClicked"
                Style="{StaticResource ButtonStyle}"
                Text="Okay"/>
        </StackLayout>
    </ScrollView>
</ContentPage>